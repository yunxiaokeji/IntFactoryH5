@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>任务列表</title>
    <link href="~/modules/css/common.css" rel="stylesheet" />    
    <link href="~/modules/css/task/tasklist.css" rel="stylesheet" />    
    <link href="~/modules/iconfont/ux_1460342755_7796638/iconfont.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.11.1.js"></script>
    <script src="~/Scripts/sea.js"></script>
    <script src="~/Scripts/doT.js"></script>
    <script type="text/javascript">
        seajs.use("/modules/scripts/task/tasklist.js", function (data) {
            data.init();
        });
    </script>
</head>
<body>
    @* 遮罩 *@
    <div class="shade">
        <div class="search"> 
          <span class="span-search"><input type="text" class="txt-search" placeholder="请输入客户名称搜索" /></span>
          <span class="cencal">确定</span>
        </div>
    </div>
    @* 头部 *@
    <header>
        <ul class="header">
            <li>
                <div class="head head-menu"><i class="iconfont">&#xe60d;</i></div>
            </li>
            <li>
                <div class="head">我的任务</div>                
            </li>
            <li>
                <div class="head" id="cancel-header"><i class="iconfont iconfont-search">&#xe605;</i></div>  
            </li>
        </ul>
    </header>    
    @* 选择状态 *@
    <ul class="task-status">
            <li id="all-status" data-status="-1">
                <div class="ico-status iconfont-status-ico iconfont">&#xe61b;</div>
                <a>全部</a>
            </li>
            <li id="unreceived-status" data-status="0">
                <div class="ico-status iconfont-status iconfont"  id="iconfont-unreceived">&#xe61e;</div>
                <a>未接受</a>
            </li>
            <li id="underway-status" data-status="1">
                <div class="ico-status iconfont-status iconfont" id="iconfont-underway">&#xe621;</div>
                <a>进行中</a>
            </li>
            <li id="accomplish-status" data-status="2">
                <div class="ico-status iconfont-status iconfont" id="iconfont-underway-accom">&#xe61f;</div>
                <a>已完成</a>
            </li>
        </ul>
    <div class="select-box"> 
        @* 选项 *@  
         <ul class="select">
             <li><div class="copy" id="type-a" data-type="0">
                 <a class="type-a">类型</a>
                 <i class="iconfont-select iconfont" id="iconfont-type">&#xe61c;</i>
             </div></li>
             <li><div class="copy" id="flow-a" data-flow="0">
                 <a class="flow-a">流程</a>
                 <i class="iconfont-select iconfont" id="iconfont-flow">&#xe61c;</i>
             </div></li>
             <li><div class="copy" id="screen-a" data-screen="0">
                 <a class="screen-a">流程阶段</a>
                 <i class="iconfont-select iconfont" id="iconfont-screen">&#xe61c;</i>
             </div></li>
             <li><div class="copy" id="select-copy" data-select="0">
                 <a class="sort-a">排序</a>        
                 <i class="iconfont-select iconfont" id="iconfont-sort">&#xe61c;</i>    
             </div></li> 
         </ul>
        @* 选项详细下拉 *@           
        <div class="dropdownlist">
            @* 类型下拉 *@            
            <div class="tab-type">
                <ul class="option"> 
                    <li data-id="-1"><i class="iconfont-type">&#xe61b;</i><span class="all-type">全部</span></li>                 
                    <li data-id="1"><i class="iconfont-type">&#xe612;</i><span class="DY-type" >打样</span></li>
                    <li data-id="2"><i class="iconfont-type iconfont-type-last">&#xe60f;</i><span class="DH-type">大货</span></li>                        
                </ul>                
             </div>    
              @*流程下拉*@ 
            <div class="flow-type">
                <ul class="potion" id="flow-potion">                     
                    <li class="all-flow" data-id="-1">全部流程</li>                            
                </ul>
           </div>           
            @* 流程阶段下拉 *@
            <div class="screen-type">
                <ul class="potion" id="screen-potion"> 
                                       
                </ul>
            </div>        
            @* 排序 *@
            <div class="tab-screen" id="tab-screen">
                <ul class="potion">
                    <li class="taketime" data-takepo="0">接受时间正序</li>
                    <li class="tasktime" data-takepo="1">接受时间倒序</li>
                    <li class="tasktime" data-takepo="0">到期时间正序</li>
                    <li class="tasktime" data-takepo="1">到期时间倒序</li>
                    <li class="tasktime" data-takepo="0">任务创造时间正序</li>
                    <li class="tasktime" data-takepo="1">任务创造时间倒序</li>
                </ul>               
            </div>
        </div>
     </div> 
    @* 任务列表 *@
    <div class="list">
        
    </div>
</body>
</html>

